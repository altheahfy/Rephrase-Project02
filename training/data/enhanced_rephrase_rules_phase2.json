{
  "version": "2.0",
  "description": "Rephrase文法解析ルール - フェーズ2拡張版（文構造拡張）",
  "phase": 2,
  "total_rules": 32,
  "phase1_rules": 25,
  "phase2_rules": 7,
  "spacy_coverage": {
    "total_dependencies": 45,
    "covered_dependencies": 36,
    "coverage_percentage": 80.0
