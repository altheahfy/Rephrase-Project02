# Rephrase Server Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8080

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Database Configuration (開発用はSQLite、本番用はMariaDB)
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=3306
DB_NAME=rephrase_dev
DB_USER=root
DB_PASSWORD=

# Redis Configuration (セッション管理用)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5

# Email Configuration (パスワードリセット用)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@rephrase.example.com

# External APIs
OPENAI_API_KEY=
GOOGLE_CLOUD_API_KEY=

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=9090

